{
    "name": "cuephp/logger",
    "type": "library",
    "description": "a light weight log lib",
    "keywords": [ "psr-3", "log"],
    "license": "MIT",
    "homepage": "https://github.com/SolaTyolo/lightlog",
    "autoload": {
        "psr-4": {
            "SolaTyolo\\Lightlog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SolaTyolo\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "~7.3 || ^8.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^8.0 || ^9.0"
    },
    "scripts": {
        "fix":  [
            "./vendor/bin/phpcbf --standard=PSR2 src"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse src"
        ],
        "unit-test": [
            "./vendor/bin/phpunit"
        ]
    }
}